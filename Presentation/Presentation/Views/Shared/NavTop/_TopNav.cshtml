                        @*<i class="bi bi-gear"></i>*@
                        @*<img src="@Url.Content("~/assets/bootstrap-icons/gear.svg")" alt="gear icon" width="23" height="23">*@

                        <i class="bi bi-gear" style="font-size:1.4375em"></i>

                    </a></div>

                <div class="app-utility-item app-user-dropdown dropdown">
                   @await Html.PartialAsync("_ProfileBar") 
